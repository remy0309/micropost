<div class="row">
 <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @followings.any? %>
      <h1>followings(<%= @followings.count %>)</h1>
      <ol class="microposts">
        <%= render partial: 'relationships/following', collection: @followings %>
      </ol>
    <% end %>
  </div>
</div>