<div class="row">
 <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @followers.any? %>
      <h1>followers(<%= @followers.count %>)</h1>
      <ol class="microposts">
        <%= render partial: 'relationships/follower', collection: @followers %>
      </ol>
    <% end %>
  </div>
</div>